<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Palindrome</title>
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
  <script src="https://kit.fontawesome.com/9758b9c0d3.js" crossorigin="anonymous"></script>
</head>
<body>
  <h1>Palindrome? lets see</h1>
  <!-- <h2>Why you trappin so hard?</h2> -->


  <!-- <h3>Messages</h3> -->
  <ul class="messages">
  <% for(var i=0; i<messages.length; i++) {%>
    <li class="message">
      <span><%= messages[i].word %></span>
      <!-- <span><%= messages[i].msg %></span> -->
      <span><%= messages[i].thumbUp %></span>
      <span><i class="fa-solid fa-car" aria-hidden="true"></i></span>
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>

  <h2>Enter a word and click the "racecar" icon</h2>

  <form action="/messages" method="POST">
    <input type="text" placeholder="word" name="word">
    <!-- <input type="text" placeholder="message" name="msg"> -->
    <button type="submit">Submit</button>
  </form>

  <script src="main.js"></script>

</body>
</html>
